<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/space_small"
    android:layout_marginEnd="@dimen/space_tiny"
    android:layout_marginBottom="@dimen/space_tiny"
    android:background="@drawable/bg_grey_medium_rounded_all_corners"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <nhdphuong.com.manga.views.customs.MyTextView
        android:id="@+id/tvLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/space_small"
        android:layout_weight="3"
        android:clickable="false"
        android:gravity="center_vertical"
        android:maxLines="3"
        android:paddingStart="@dimen/space_tiny"
        android:paddingEnd="@dimen/space_tiny"
        android:text="@string/tags"
        android:textColor="@color/greyD9D9D9"
        android:textSize="@dimen/info_card_text_size"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:myFont="@string/NotoSansBold"
        tools:targetApi="jelly_bean" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/clClickableArea"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/ripple_transparent_medium_rounded_all_corners"
        android:clickable="true"
        android:focusable="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
