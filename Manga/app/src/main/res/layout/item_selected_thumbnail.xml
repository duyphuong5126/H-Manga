<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_dark_red_rounded_all_corners"
    android:padding="@dimen/space_tiny">

    <ImageView
        android:id="@+id/ivPageThumbnail"
        android:layout_width="@dimen/thumbnail_width"
        android:layout_height="@dimen/thumbnail_height"
        android:background="@android:color/transparent"
        android:contentDescription="@string/page_thumbnail"
        android:scaleType="fitXY"
        android:src="@drawable/ic_404_not_found"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <nhdphuong.com.manga.views.customs.MyTextView
        android:id="@+id/mtvPageNumber"
        android:layout_width="0dp"
        android:layout_height="@dimen/thumbnail_index_height"
        android:background="@drawable/bg_gradient_transparent_grey"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="@dimen/small_text_size"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:myFont="@string/NotoSansBold" />

    <View
        android:id="@+id/vNavigation"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/ripple_book_item"
        android:clickable="true"
        android:focusable="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
