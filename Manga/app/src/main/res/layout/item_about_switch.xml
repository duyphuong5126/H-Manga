<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_white_all_corners_small_radius"
    android:padding="@dimen/space_medium">

    <nhdphuong.com.manga.views.customs.MyTextView
        android:id="@+id/mtvLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/space_small"
        android:layout_marginBottom="@dimen/space_small"
        android:text="@string/app_upgrade_notification_receive"
        android:textColor="@color/grey_4"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:myFont="@string/NotoSansBold" />

    <androidx.appcompat.widget.SwitchCompat
        android:id="@+id/scEnabled"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/space_small"
        android:layout_marginLeft="@dimen/space_small"
        android:layout_marginEnd="@dimen/space_medium"
        android:layout_marginRight="@dimen/space_medium"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/mtvLabel" />

</androidx.constraintlayout.widget.ConstraintLayout>